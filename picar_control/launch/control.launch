<!-- Controllers launch file

    Load parameters, launch controllers and a robot state publisher.
    Primarily for controllers using ros_control and related frameworks.
 -->
<launch>
    <!-- Load robot description -->
    <include file="$(find picar_description)/launch/description.launch" />

    <!-- Load controller parameters -->
    <rosparam command="load" file="$(find picar_control)/config/ackermann_steering_controller.yaml" />
    <rosparam command="load" file="$(find picar_control)/config/gains.yaml" />
    <rosparam command="load" file="$(find picar_control)/config/joint_state_publisher.yaml" />

    <!-- Spawn the controllers -->
    <node pkg="controller_manager" type="spawner" name="base_controller_spawner"
        args="joint_state_publisher ackermann_steering_controller" />
   
    <!-- Launch the robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
</launch>